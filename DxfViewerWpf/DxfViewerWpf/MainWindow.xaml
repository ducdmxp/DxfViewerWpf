<Window
    x:Class="DxfViewerWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DxfViewerWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DXF Viewer"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="5"
            Orientation="Horizontal">
            <Button
                Padding="10,5"
                Click="OpenDxfFile_Click"
                Content="Open DXF File" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Margin="5"
            Background="WhiteSmoke"
            BorderBrush="Gray"
            BorderThickness="1">
            <Viewbox>
                <Canvas
                    x:Name="DrawingCanvas"
                    Width="1"
                    Height="1"
                    Background="White" />
            </Viewbox>
        </Border>
    </Grid>
</Window>